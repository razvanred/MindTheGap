<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iceproject.mindthegap.SelectWordsActivity">

    <ImageView
        android:id="@+id/imgQuestions"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/flag_it"
        app:layout_constraintEnd_toEndOf="@id/gv0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/gv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <ImageView
        android:id="@+id/imgAnswers"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:src="@drawable/flag_uk"
        app:layout_constraintEnd_toEndOf="@id/gv1"
        app:layout_constraintStart_toStartOf="@id/gv0"
        app:layout_constraintTop_toTopOf="@id/imgQuestions" />

    <android.support.constraint.Guideline
        android:id="@+id/gv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <com.buildware.widget.indeterm.IndeterminateCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/imgQuestions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/gv1"
        app:layout_constraintTop_toTopOf="@id/imgQuestions" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgQuestions" />


</android.support.constraint.ConstraintLayout>
