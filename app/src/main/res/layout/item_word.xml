<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgQuestions"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/flag_it"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txvQuestions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="ciao"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imgQuestions"
            app:layout_constraintEnd_toStartOf="@id/cbxSelected"
            app:layout_constraintStart_toEndOf="@id/imgQuestions"
            app:layout_constraintTop_toTopOf="@id/imgQuestions" />

        <ImageView
            android:id="@+id/imgAnswers"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/flag_uk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/imgQuestions"
            app:layout_constraintTop_toBottomOf="@id/imgQuestions" />

        <TextView
            android:id="@+id/txvAnswers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="hello"
            app:layout_constraintBottom_toBottomOf="@id/imgAnswers"
            app:layout_constraintEnd_toStartOf="@id/cbxSelected"
            app:layout_constraintStart_toEndOf="@id/imgAnswers"
            app:layout_constraintTop_toTopOf="@id/imgAnswers" />

        <CheckBox
            android:id="@+id/cbxSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>